<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>.net8.0-windows7.0</TargetFrameworks>
        <RootNamespace>Forge.SDLBackend</RootNamespace>
        <ImplicitUsings>disable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <LangVersion>10.0</LangVersion>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
        <PlatformTarget>x86</PlatformTarget>
        <IsPublishable>False</IsPublishable>
        <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
        <AppendRuntimeIdentifierToOutputPath>false</AppendRuntimeIdentifierToOutputPath>
        <OutputPath>$(SolutionDir)BUILD\ForgeBackend\SDL\$(Configuration)</OutputPath>
        <Platforms>x86</Platforms>
    </PropertyGroup>

    <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|x86'">
        <Optimize>False</Optimize>
    </PropertyGroup>

    <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|x86'">
        <Optimize>True</Optimize>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="ForgeUpdaterManifest" Version="0.3.1">
            <PrivateAssets>all</PrivateAssets>
        </PackageReference>

        <PackageReference GeneratePathProperty="true" Include="ppy.SDL3-CS" Version="2024.1022.0" />

        <EmbeddedResource Include="$(Pkgppy_SDL3-CS)\lib\net8.0\SDL3-CS.dll" LogicalName="SDL3-CS.dll" />


        <ExportFile Include="$(ProjectDir)Lib\SDL3.dll">
            <!-- 
                ExportFileDir is relative to the chose ExportPath from the ProjectType
                e.g. $(PluginExportPath)/$(ExportFileDir)
            -->
            <ExportFileDir>\Lib\</ExportFileDir>
        </ExportFile>
    </ItemGroup>

    <ItemGroup>
        <Folder Include="Scripts\" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\..\ForgeEngines\UX\UX-Engine.csproj" />
        <ProjectReference Include="..\..\Forge\S4Forge.csproj" />
    </ItemGroup>

    <!--Forge Update System: -->
    <PropertyGroup>
        <ProjectType>Plugin</ProjectType>

        <ManifestId>UX-Engine-SDL</ManifestId>
        <ManifestName>UX-Engine SDL Renderer</ManifestName>
        <ManifestType>$(ProjectType)</ManifestType>
        <ManifestAssetUrl>https://</ManifestAssetUrl>
        <ManifestClearResidualFiles>false</ManifestClearResidualFiles>
        <ManifestEmbedded>false</ManifestEmbedded>
        <ManifestEntryPoint>$(TargetFileName)</ManifestEntryPoint>
    </PropertyGroup>

    <ItemGroup>
        <ManifestIgnoredEntries Include="log.txt" />

        <ManifestRelationships Include="Forge">
            <Manifest>Url to the newest manifest (e.g. latest release on gitlab)</Manifest>
            <Optional>false</Optional>
            <Minimum>1.*</Minimum>
            <Maximum>2.0.0</Maximum>
            <Verified>1.1.0</Verified>
        </ManifestRelationships>

        <ManifestRelationships Include="UX-Engine">
            <Manifest>Url to the newest manifest (e.g. latest release on gitlab)</Manifest>
            <Optional>false</Optional>
            <Minimum>1.*</Minimum>
            <Maximum>2.0.0</Maximum>
            <Verified>1.1.0</Verified>
        </ManifestRelationships>
    </ItemGroup>
</Project>
